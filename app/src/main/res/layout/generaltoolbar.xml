<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/light_cel_app"
    app:title=""
    android:contentInsetStart="0dp"
    android:contentInsetEnd="0dp"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Nombre del plato (Texto a la izquierda) -->
        <TextView
            android:id="@+id/tvNameBus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido, NOMBRE"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Espaciador para empujar el icono a la derecha -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Icono de remove (A la derecha) -->
        <ImageView
            android:id="@+id/remove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_logout"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>


</androidx.appcompat.widget.Toolbar>